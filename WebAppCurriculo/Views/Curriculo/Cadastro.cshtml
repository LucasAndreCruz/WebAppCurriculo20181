

<h2>Cadastro de Currículo</h2>

<form action="/Curriculo/Cadastro" method="get">
   
    <div class="form-horizontal">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Informações Pessoais</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">
                    <label for="Nome" class="control-label col-md-3">
                        Nome:
                    </label>
                    <div class="col-md-3">
                        <input type="text" name="Nome" class="form-control" placeholder="Digite o seu nome" id="Nome" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="Email" class="control-label col-md-1">Email:</label>
                    <div class="col-md-3">
                        <input type="Email" name="Email" id="Email" class="form-control" placeholder="Digite o seu email" />
                    </div>
                </div>


                <div class="form-group">
                    <label for="DataNascimento" class="control-label col-md-2">Data de Nascimento:</label>
                    <div class="col-md-4">
                        <input type="text" name="" id="DataNascimento" class="form-control" placeholder="Formato dd/mm/aaaa. Ex.: 29/05/2000">
                    </div>
                </div>

                <div class="form-group">

                    <label for="Altura" class="control-label col-md-2">Altura(m):</label>
                    <div class="col-md-2">

                        <input type="text" name="Altura" id="Altura" class="form-control" placeholder="Ex. 1.40">

                    </div>


                </div>


                <div class="form-group">
                    <label for="Site" class="control-label col-md-2">Site:</label>
                    <div class="col-md-2">
                        <input type="url" class="form-control" id="Site" name="Site" placeholder="Facebook, Linkedin,...">
                    </div>
                </div>


                <div class="form-group">
                    <label for="EstadoCivil" class="control-label col-md-2">Estado Civil:</label>
                    <div class="col-md-3">
                        <select name="EstadoCivil" class="form-control">
                            <option value="">-- Selecione --</option>
                            <option value="Casado(a)">Casado(a)</option>
                            <option value="Solteiro(a)">Solteiro(a)</option>
                            <option value="Viúvo(a)">Viúvo(a)</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">
                        Sexo:
                    </label>
                    <div class="col-md-10">
                        <div class="radio-inline">
                            <label>
                                <input type="radio" name="SexoMasculino" value="Masculino" />
                                Masculino
                            </label>
                        </div>
                        <div class="radio-inline">
                            <label>
                                <input type="radio" name="SexoFeminino" value="Feminino" />
                                Feminino
                            </label>
                        </div>
                    </div>
                </div>

            </div>
        </div>


        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Endereço</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">
                    <label for="CEP" class="control-label col-md-1">CEP:</label>
                    <div class="col-md-4">
                        <input type="text" name="CEP" id='CEP' class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="Endereco" class="control-label col-md-1">Endereço:</label>
                    <div class="col-md-4">
                        <input type="text" name="Endereco" id="Endereco" class="form-control" />
                    </div>
                </div>

            </div>
        </div>



        <div class="panel  panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Contato</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">
                    <label for="Telefone" class="control-label col-md-1">Telefone:</label>
                    <div class="col-md-4">
                        <input type="tel" name="Telefone" id='Telefone' class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="Celular" class="control-label col-md-1">Celular:</label>
                    <div class="col-md-4">
                        <input type="tel" name="Celular" id="Celular" class="form-control" />
                    </div>
                </div>

            </div>
        </div>



        <div class="panel  panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Conhecimentos</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">

                    <div class="col-md-10">
                        <div class="checkbox-inline">
                            <label>
                                <input type="checkbox" name="Html" /> Html
                            </label>
                        </div>
                        <div class="checkbox-inline">
                            <label>
                                <input type="checkbox" name="Css" /> CSS
                            </label>
                        </div>
                        <div class="checkbox-inline">
                            <label>
                                <input type="checkbox" name="Javascript" /> JavaScript
                            </label>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-2">
                        <textarea name="Resumo" rows="8" class="form-control" placeholder="Digite os seus conhecimentos"></textarea>
                        <p>Mais conhecimentos</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="text-right col-md-12">
                <input id="btnCancelar" type="button" value="Cancelar" class="btn btn-danger" />
                <input id="btnCadastro" type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>

    </div>

</form>